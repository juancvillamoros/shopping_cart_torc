<div id="<%= dom_id order_item %>">
  <p>
    <strong>Unit price:</strong>
    <%= order_item.unit_price %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= order_item.price %>
  </p>

  <p>
    <strong>Quantity:</strong>
    <%= order_item.quantity %>
  </p>

  <p>
    <strong>Total price:</strong>
    <%= order_item.total_price %>
  </p>

  <p>
    <strong>Product:</strong>
    <%= order_item.product_id %>
  </p>

  <p>
    <strong>Order:</strong>
    <%= order_item.order_id %>
  </p>

</div>
